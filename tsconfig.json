{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "es2022",
    "lib": ["es2022"],
    "types": ["node", "jest"],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    // Remove "jsx": "react-jsx" unless you use React
  },
  "include": ["src/**/*.ts", "src/**/*.mts", "src/repository/.repository.ts"],
  "exclude": ["eslint.config.mts"]
}